generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Role {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  User User[]
}

model User {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  matNr         Int             @unique
  email         String          @unique
  password      String
  name          String
  role          Role            @relation(fields: [roleName], references: [name], onDelete: Cascade, onUpdate: Cascade)
  roleName      String          @default("student")
  Schnitzeljagd Schnitzeljagd[]
  Game          Game[]
}

model Schnitzeljagd {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  password  String    @unique
  groupSize Int
  user      User      @relation(fields: [userId], references: [matNr])
  userId    Int
  Station   Station[]
}

model Game {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  rules   String
  user    User      @relation(fields: [userId], references: [id])
  userId  String    @db.ObjectId
  Station Station[]
}

model Station {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  location        String
  game            Game          @relation(fields: [gameId], references: [id])
  gameId          String        @db.ObjectId
  qrCode          String
  clue            String
  endText         String
  schnitzeljagd   Schnitzeljagd @relation(fields: [schnitzeljagdId], references: [id])
  schnitzeljagdId String        @db.ObjectId
}
